.tip-fade-enter-active
  transition: all .4s ease
.tip-fade-leave-active
  transition: all .3s ease
.tip-fade-enter,.tip-fade-leave-to
  opacity 0
  transform translate(0%,-70px)
.login-tip
  position absolute
  width 100%
  height 100px
  font-size 0.96em
  text-align center
  margin 2em 0
  span 
    padding .5em 1.5em
    border-radius 4px
    background-color #fff
    box-shadow: 1px 1px 5px #01463f
    letter-spacing 2px
.login-fail
  color #e21203
.login-ok
  color #00a200
.login-err
  color #e21203

