.header-tip
  position fixed
  top 0
  width 100%
  height 65px
  overflow hidden
  background #00c6ff
  background -webkit-linear-gradient(to right, #0072ff, #00c6ff)
  background linear-gradient(to right, #219df5, #00c6ff)
  padding 0 1.5em
  box-sizing: border-box;
  p
    letter-spacing 2px
    font-size 1.5em
    color #FFF
  .header-logo
    float left
    margin-top 5px
   
    img 
       width 50px;
      height auto;
    span 
      vertical-align 50%
  .header-date
    float right
    // margin-right 1em
    font-size 1.2em
    letter-spacing 0px
    line-height 65px
.last-page-center
  position fixed
  top 65px
  bottom 0
  left 0
  right 0
  padding 60px 100px 100px 100px
.info-page
  height: 100%
  background #f7f7f7
  border-radius: 8px;
  position relative
.center-content
  position fixed
  top 65px
  bottom 0
  left 0
  right 0
  border 20px solid #fafafa
  border-bottom-width 40px
  background: #fafafa
.cenetr-wrapper
  background: #fff
  box-shadow: 1px 1px 5px #cacaca 
  display: flex;
  height 100%
  border-radius: 8px
.center-right
  flex: 1 1 70%
.center-left
  flex: 1 1 30%
  ul
    height 100%
    display flex
    flex-direction: column
    li
      flex 1
      display: flex
      justify-content center
      align-items: center
      background #13aef9
      color: #ffffff
      letter-spacing: 2px
      font-size: 1.5em
      border-bottom: 1px dashed #fafafa
    li:last-child
      border-bottom: 0px
    li.router-link-active
      color: #13aef9
      background: #fafafa
.center-right-wrapper
  height 100%
  section
    height 100%
.right-header
  color: #666;
  font-size: 1.5em;
  letter-spacing: 2px;
  text-align: center;
  margin-top: 20px;
.select-card
  display: flex
  flex-wrap: wrap
  height calc(100% - 53px)
  li
    flex: 1 1 50%
    display: flex
    align-items: center
    justify-content center
    padding: 1.5em 1em;
    box-sizing border-box
    div
      border-radius: 4px;
      border:1px solid #dedede
      display: flex
      flex: 1
      height 100%;
      align-items: center
      font-size: 1.4em
      .fa
        width: 100px
        height: 100px
        border-radius: 50%;
        line-height: 100px
        text-align: center
        color:#fff
        margin-left: 20px
      .fa-user
        background: #F2994A;  /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, #F2C94C, #F2994A);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, #F2C94C, #F2994A); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
      .fa-address-card-o
        background: #00d2ff;  /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, #3a7bd5, #00d2ff);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, #3a7bd5, #00d2ff); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
      .fa-credit-card
        background: #AAFFA9;  /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, #11FFBD, #AAFFA9);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, #11FFBD, #AAFFA9); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
      .fa-id-badge
        background: #EC6F66;  /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, #F3A183, #EC6F66);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, #F3A183, #EC6F66); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
      span:last-child
        flex: 1
        text-align: center
        display: flex
        flex-direction column
        i:first-child
          font-size: 1.5em
          letter-spacing: 9px
        i:last-child
          color:#888
.home-header
  display: flex
  justify-content space-between
  align-items: center
  color #fff
  .nav,.nav-time
    font-size 1.5em
  .nav-txt
    font-size: 1.6em
.line
  padding: 0 0.5em
.payment-two
  height 100%
.payment-two>section
    display: flex
.payment-money
  background: #ffffff
  color:#333;
  flex: 1
  box-shadow: 1px 1px 6px #ecebeb
  header
    height: 60px
    line-height: 60px
    border-bottom 2px dashed #d4d4d4
    h1
      font-size: 1.5em
      padding: 0 1em;
  p
    font-size: 1.17em
    line-height: 40px
    padding: 0 1em;
    padding-top: 20px
  ul
    display: flex
    flex-wrap: wrap
    padding: 0 1em;
    li
      flex 1 1 33.3%
      box-sizing: border-box;
      padding: 1.5em 0
      display: flex;
      align-items: center;
      justify-content: center
      span
        padding: 1.2em 2.2em;
        border: 1px solid #d4d4d4;
        border-radius: 8px;
        font-size: 1.2em;
        background: #fafafa
        flex: 1;
        text-align: center;
        margin: 0 20px;
      span.active
        background: #0cb7fb
        color:#fff
        border-color: #0cb7fb;
.input-item
  padding: 2em calc(1em + 20px);
.input
  outline: none 
  width: 100%
  height: 55px;
  font-size: 18px
  padding-left: 20px
  box-sizing: border-box
  border-radius: 4px
  border:1px solid #d4d4d4
.payment-method
  // flex: 1
  // max-width: 300px
  h1
    font-size: 2em
    // letter-spacing: 2px;
    color:#333333
    line-height: 60px
    padding: 0 1em;
  p
